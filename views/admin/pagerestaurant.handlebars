<section class="row">
    <hgroup class="col-xl-12 col-lg-12 col-md-12 col-sm-12 m-5">
        <h1 class="text-center">{{restaurant.name_restaurant}}</h1>
    </hgroup>

    <figure class="page-figure col-xl-8 col-lg-8 col-md-8 col-sm-8 mt-5 img-fluid m-auto">
        <img src="/uploads/{{restaurant.name_image_restaurant}}"/>
    </figure>

    <input type="hidden" value="{{restaurant.name_restaurant}}" name="name_hr"/>
    <input type="hidden" value="{{restaurant.name_image_restaurant}}" name="image_hr"/>

    <span class="mt-5 col-xl-12 col-lg-12 col-md-12 col-sm-12 font-custom">
        <strong>
            Rating <i class="fas fa-star color-yellow"></i>: {{restaurant.rating_restaurant}}<br/><br/>
            
            <br/> <br/>

            {{#if user}}
                {{#if loved.isLoved}}
                    <input type="hidden" value="{{loved._id}}" name="loveId"/>
                    <form method="POST" action="/user/restaurant/page/loved/add/{{user._id}}/{{restaurant._id}}/{{restaurant.name_restaurant}}/{{restaurant.name_image_restaurant}}">
                        Remove loved this restaurant:
                        <button class="lovedlink not-background-btn" type="submit"><i class="fas fa-heart"></i></button>
                        <input type="hidden" value="{{loved.isLoved}}" name="loveded"/>

                        <br/>
                        <br/>
                        <h2>You loved this restaurant ğŸ˜</h2>
                    </form>

                    {{else}}

                        <form method="POST" action="/user/restaurant/page/loved/add/{{user._id}}/{{restaurant._id}}/{{restaurant.name_restaurant}}/{{restaurant.name_image_restaurant}}">
                            Loved this restaurant:
                            <button class="hearthLink not-background-btn" type="submit"><i class="fas fa-heart"></i></button>
                            <input type="hidden" value="{{loved.isLoved}}" name="loveded"/>
                            

                            <br/>
                            <br/>
                            <h2>You not loved this restaurant yet ğŸ˜¶</h2>
                        </form>
                {{/if}}
            {{/if}}
            <input type="hidden" name="id_user" value="{{user._id}}"/>
            <input type="hidden" name="id_restaurant" value="{{restaurant._id}}"/>
            <br/>
        </strong>
    </span>
    {{#if user}}
        <form method="POST" action="/user/restaurant/page/commentary/add" class="col-xl-12 col-lg-12 col-md-12 col-sm-12 m-2">
            <section >
            <textarea name="comment" class="form-control" placeholder="Leave your commentary here..."></textarea>
            <br/>

            <input type="hidden" name="id_restaurant" value="{{restaurant._id}}"/>
            <input type="hidden" name="id_user" value="{{user._id}}"/>
            <input type="hidden" name="name_user" value="{{user.name_user}}"/>
            <button type="submit" class="btn btn-outline-primary">Send</button>
            </section>
        </form>
        {{else}}
            <section class="col-xl-12 col-lg-12 col-md-12 col-sm-12 m-2">
                <h1 class="text-center">Do a login for leave one commentary</h1>
            </section>
    {{/if}}

    <br/>
    <br/>

    <h2 class="col-xl-12 col-lg-12 col-md-12 col-sm-12 m-5">Commentarys: </h2>
    {{#if comment}}
        {{#each comment}}
            <br/>
            <section class="card col-xl-12 col-lg-12 col-md-12 col-sm-12 m-2">
                <header class="card-header">
                    <H1><i class="fas fa-user"></i> {{name_creator_commentary}}</H1>
                </header>
                <article>
                    <h3 class="p-3">{{commentary}}</h3>
                </article>
            </section>
            <br/>
        {{/each}}
        {{else}}
            <section class="jumbotron">
                <h1>Don't Have commentarys in this hotel, be a first to comment</h1>
            </section>
    {{/if}}
</section>
